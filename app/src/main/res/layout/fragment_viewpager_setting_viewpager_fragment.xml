<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_bottom_bar_height"
        android:background="@drawable/shape_default_bg"
        >
    <ToggleButton
        android:id="@+id/left"
        android:background="@drawable/selector_button_bg"
        android:text="@string/inner_left"
        style="@style/mainBottomBarToggleButton"
        />
    <ToggleButton
        android:id="@+id/right"
        android:background="@drawable/selector_button_bg"
        android:text="@string/inner_right"
        style="@style/mainBottomBarToggleButton"
        />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_below="@id/top_tab"
        />
</RelativeLayout>
